{% extends "govuk/template.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/header/macro.njk" import govukHeader %}
{%- from "moj/components/primary-navigation/macro.njk" import mojPrimaryNavigation -%}

{% block head %}
	{# setup the header tags, to link to the styles #}
	<link rel="stylesheet" href="style.css"/>
{% endblock %}

{% block pageTitle %}
	{{ pageTitle | default('GOV.UK') }} â€“ {{ serviceName | default('Example To Do App') }}
{% endblock %}

{% block header %}
	{{ govukHeader({
		homepageUrl: "/",
		serviceName: 'Example To Do App',
		classes: 'pins-modded-header'
	}) }}
{% endblock %}

{% block main %}
  	{{ mojPrimaryNavigation({
			label: 'Primary navigation',
			items: [
				{
					text: 'Examples',
					href: 'examples',
					active: pageTitle === 'Example journey'
				},
				{
					text: 'Challenges',
					href: 'challenges',
					active: pageTitle === 'Challenges'
				}
			]
	}) }}
	{{ super() }}
{% endblock %}

{% block beforeContent %}
	{% block backLink %}
		{% if backLinkUrl and backLinkText %}
			{{ govukBackLink({ text: backLinkText, href: backLinkUrl }) }}
		{% elseif backLinkUrl %}
			{{ govukBackLink({ href: backLinkUrl }) }}
		{% elseif backURL %}
			{{ govukBackLink({ href: backURL }) }}
			{% endif %}
		{% endblock %}
	{% endblock %}

	{% block content %}
		{% block errorSummary %}
			{% if errors %}
				<div class="govuk-grid-row">
					<div class="govuk-grid-column-two-thirds">
						{{
						govukErrorSummary({
							titleText: "There is a problem",
							errorList: errors | mapToErrorSummary
						})
					}}
					</div>
				</div>
			{% endif %}
		{% endblock %}
		{% block pageHeading %}
			<div class="govuk-grid-row">
				<div class="govuk-grid-column-full">
					<h1 class="govuk-heading-xl">
						{% if pageCaption %}
							<span class="govuk-caption-xl">{{ pageCaption }}</span>
						{% endif %}{{ pageHeading or pageTitle }}
					</h1>
				</div>
			</div>
		{% endblock %}
		{% block pageContent %}{% endblock %}
	{% endblock %}
