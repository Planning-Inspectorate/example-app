{% extends "layouts/main.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageContent %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <p class="govuk-body govuk-!-margin-bottom-8">
                Here you will find a list of challenges designed to make you comfortable with express and the rendering engine we use-nunjucks. 
                Challenges are split into groups based on their complexity and scored using story points.
            </p>

        </div>
    </div>

    {{ govukButton({
        text: "Start now",
        href: "/challenges/story-points",
        isStartButton: true
    }) }}


{% endblock %}